<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Webkul_Affiliate::manager" title="Affiliate System" sortOrder="10" >
                    <resource id="Webkul_Affiliate::affiliate" title="Affiliate" sortOrder="10">
                        <resource id="Webkul_Affiliate::affiliate_user" title="Affiliate Users" sortOrder="10" />
                        <resource id="Webkul_Affiliate::affiliate_email" title="Email Affiliate" sortOrder="20" />
                    </resource>
                    <resource id="Webkul_Affiliate::banner" title="Banners" sortOrder="20">
                        <resource id="Webkul_Affiliate::banner_manage_text_ads" title="Text Ads" sortOrder="20" />
                    </resource>
                    <resource id="Webkul_Affiliate::statistics" title="Statistics" sortOrder="30">
                        <resource id="Webkul_Affiliate::statistics_traffic" title="Traffic" sortOrder="10" />
                        <resource id="Webkul_Affiliate::statistics_sales" title="Sales" sortOrder="20" />
                        <resource id="Webkul_Affiliate::statistics_payment" title="Payment Records" sortOrder="30" />
                        <resource id="Webkul_Affiliate::statistics_graph" title="Statistics Graph" sortOrder="40" />
                    </resource>
                    <resource id="Webkul_Affiliate::marketplace_support" title="Support" sortOrder="40">
                        <resource id="Webkul_Affiliate::marketplace_userguide" title="User Guide" sortOrder="10" />
                        <resource id="Webkul_Affiliate::marketplace_extension" title="Store Extension" sortOrder="20" />
                        <resource id="Webkul_Affiliate::marketplace_uvdesk" title="Ticket/Customisations" sortOrder="30" />
                        <resource id="Webkul_Affiliate::marketplace_services" title="Services" sortOrder="40" />
                        <resource id="Webkul_Affiliate::marketplace_reviews" title="Reviews" sortOrder="50" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Webkul_Affiliate::config_affiliate" title="Affiliate Configuration Section" sortOrder="50" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
